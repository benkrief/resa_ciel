{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}- Liste{% endblock %}

{% block body %}
        <div class="no-padding    container-fixed-lg bg-white">
            <div class="container" style="box-sizing: content-box">
                <div class="card card-transparent">
                    <div class="card-header ">
                        <div class="card-body">
                            <div class="table-responsive">
                                <form method="post" action="{{ path('office_export')}}">
                                    <table class="table table-hover" id="basicTable" style="background: whitesmoke">
                                        <thead>
                                        <tr>
                                            <th style="width:12%">Date</th>
                                            <th style="width:12%">Heure</th>
                                            <th style="width:12%">Paracha</th>
                                            <th style="width:12%">Lieu</th>
                                            <th style="width:12%">Office</th>
                                            <th style="width:12%">Ajouter</th>
                                        </tr>
                                        </thead>
                                        <tbody>

                                        {% for office in offices %}
                                            <tr style="font-size: larger; text-transform: capitalize">
                                                <td class="v-align-middle" style="text-transform: capitalize; ">{% for cle,valeur in date %}{% if cle==office.id%} {{ valeur }} {% endif %}{% endfor %}</td>
                                                <td class="v-align-middle" style="text-transform: capitalize; ">{{ office.hour? office.hour|date('G:i') : ''   }}</td>
                                                <td class="v-align-middle" style="text-transform: capitalize; ">{{ office.paracha }}</td>
                                                <td class="v-align-middle" style="text-transform: capitalize;">{{ office.lieu }}</td>
                                                <td class="v-align-middle">{{ office.title }}</td>
                                                <td class="v-align-middle"><label class="no-padding no-margin"><input type="checkbox" name="{{ office.id }}"></label></td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td class="v-align-middle" colspan="6">Pas d'office</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                    <button class="btn btn-outline-primary" type="submit"  style="font-size: large; position: relative;margin: auto;margin-top: 10px; display: inline; margin-right:5px; margin-bottom: 10px;" >
                                        Télécharger
                                    </button>
                                    <button class="btn btn-outline-primary" type="" style="font-size: large; position: relative;margin: auto;margin-top: 10px; display: inline; margin-right:5px; margin-bottom: 10px;" >
                                        <a style="font-size: medium; opacity: inherit" href="{{ path('office_admin', {'admin':admin }) }}">
                                            Revenir aux offices
                                        </a>
                                    </button>


                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}


