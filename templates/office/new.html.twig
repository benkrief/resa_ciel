{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Nouvel Office{% endblock %}

{% block body %}

    <div class="no-padding    container-fixed-lg bg-white">
        <div class="container" style="box-sizing: content-box">
            <div class="card card-transparent">
                <div class="card-header ">
                    <div class="card-body">
                        <div class="table-responsive">
                            <h1 style="font-family: Raleway-SemiBold; color: #555555;line-height: 1.5;width: 100%;padding-bottom: 11px;text-align: center">Ajouter un office</h1>
                            {{ form_start(form, {'attr':{'class':''}}) }}

                            <div class="form-group form-group-default">
                                <label for="title">Office : </label>
                                {{ form_widget(form.title,{'attr':{'class':'input100'}}) }}
                            </div>

                            <div class="form-group form-group-default">
                                <label  for="date">Date : </label>
                                {{ form_widget(form.date,{'attr':{'class':'input100'}}) }}
                            </div>

                            <div class="form-group form-group-default">
                                <label  for="heure">Heure : </label>
                                {{ form_widget(form.hour,{'attr':{'class':'input100'}}) }}
                            </div>

                            <div class="form-group form-group-default">
                                <label  for="paracha">Paracha : </label>
                                {{ form_widget(form.paracha,{'attr':{'class':'input100'}}) }}
                            </div>

                            <div class="form-group form-group-default">
                                <label  for="lieu">Lieu : </label>
                                {{ form_widget(form.lieu,{'attr':{'class':'input100'}}) }}
                            </div>

                            <div class="form-group form-group-default">
                                <label for="placemax">Place Max : </label>
                                {{ form_widget(form.maxSub,{'attr':{'class':'input100'}}) }}
                            </div>
                            <div class="form-group form-group-default">
                                <label for="comment">Commentaire : </label>
                                {{ form_widget(form.comment,{'attr':{'class':'input100'}}) }}
                            </div>

                            <button class="btn btn-outline-primary" style="font-size: large; position: relative;margin: auto;margin-top: 10px" >
                                Ajouter
                            </button>
                            {{ form_end(form) }}


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}


